{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "preserveConstEnums": true,
        "rootDir": "src",
        "outDir": "dist",
        "newLine": "LF",
        "experimentalDecorators": true,
        "sourceMap": true,
        "pretty": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ]
    },
    "files": [
        "src/index.ts",
    ],
    "exclude": [
        "node_modules/*"
    ]
}